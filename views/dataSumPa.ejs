<!DOCTYPE html>
<html class="h-full bg-gray-50">

<head>
    <title>Data Siswa - Sistem Raport</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/output.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/handsontable@latest/dist/handsontable.full.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/handsontable@latest/dist/handsontable.full.min.js"></script>
</head>

<body class="h-full">
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-2xl">
            <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Data Siswa</h2>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-2xl">
            <!-- Handsontable container -->
            <div id="dataSiswaTable" class="handsontable"></div>
        </div>
    </div>

    <script>
        // Data siswa dari server
        const siswaData = <%- JSON.stringify(siswa) %>;

        // Handsontable settings
        const container = document.getElementById('dataSiswaTable');
        const hot = new Handsontable(container, {
            data: siswaData,
            colHeaders: ['NIS', 'NISN', 'Nama Lengkap', 'Nama Panggilan'],
            columns: [
                { data: 'nis' },
                { data: 'nisn' },
                { data: 'namalengkap' },
                { data: 'namapanggilan' }
            ],
            licenseKey: 'non-commercial-and-evaluation', // Set license key
            rowHeaders: true,
            filters: true,
            dropdownMenu: true,
            width: '100%',
            height: 'auto',
            stretchH: 'all',
            autoWrapRow: true,
            manualColumnResize: true,
            manualRowResize: true,
            contextMenu: true,
        });
    </script>
</body>

</html>
